@model IEnumerable<jg739415MIS4200.Models.Vehicle>

@{
    ViewBag.Title = "Vehicles";
}

<h2>Vehicles</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Owner.ownerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datePurchased)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Owner.ownerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datePurchased)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.vehicleID }) |
            @Html.ActionLink("Details", "Details", new { id=item.vehicleID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.vehicleID })
        </td>
    </tr>
}

</table>
